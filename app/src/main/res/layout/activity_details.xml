<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.heroesofmightandmagic.www.monsterandcie.DetailsActivity">

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:background="@color/background"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/monsterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginBottom="18dp"
            android:textSize="30dp"
            android:text="Monster Name"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/evolutionLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Level"
                    android:textSize="18sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/buttonDecrementLevelValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="-" />

                    <EditText
                        android:id="@+id/editTextLevelValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:text="0"/>

                    <Button
                        android:id="@+id/buttonIncrementLevalvalue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="+" />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/elementTypeLabel"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:text="@string/elementType"
                android:layout_row="0"
                android:layout_column="1"/>
            <ImageView
                android:id="@+id/characterLevelImage"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:layout_columnWeight="1"
                android:src="@drawable/arch_knight_egg"/>
            <ImageView
                android:id="@+id/elementTypeLogo"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_column="1"
                android:src="@drawable/earth_logo"/>

        </GridLayout>
        <TextView
            android:id="@+id/statsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/stats"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/powerLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/stat_power"/>
            <TextView
                android:id="@+id/powerLevelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:layout_column="1"
                android:text="22"/>
            <ImageView
                android:id="@+id/lifeLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_column="0"
                android:src="@drawable/light_logo"/>
            <TextView
                android:id="@+id/lifeLevelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_column="1"
                android:text="22"/>
            <ImageView
                android:id="@+id/speedLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="2"
                android:layout_column="0"
                android:src="@drawable/stat_speed"/>
            <TextView
                android:id="@+id/speedLevelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="2"
                android:layout_column="1"
                android:text="22"/>
            <ImageView
                android:id="@+id/staminaLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="3"
                android:layout_column="0"
                android:src="@drawable/stat_stamina"/>
            <TextView
                android:id="@+id/staminaLevelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="3"
                android:layout_column="1"
                android:text="22"/>

        </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/evolEgg"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/arch_knight_egg"/>
            <ImageView
                android:id="@+id/evol1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/arch_knight_evol1"/>
            <ImageView
                android:id="@+id/evol2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/arch_knight_evol2"/>
            <ImageView
                android:id="@+id/evol3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:src="@drawable/arch_knight_evol3"/>

        </LinearLayout>






    </LinearLayout>

</android.support.constraint.ConstraintLayout>
