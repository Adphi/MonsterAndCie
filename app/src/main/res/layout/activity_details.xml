<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.heroesofmightandmagic.www.monsterandcie.DetailsActivity">

    <GridLayout
        android:layout_width="584dp"
        android:layout_height="807dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <TextView
            android:id="@+id/nom_du_monstre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:fontFamily="monospace"
            android:paddingBottom="50dp"
            android:text="nom_du_monstre"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/levelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_row="1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="Level 0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/elementLabell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:text="Type d'élément"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/elementLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_row="2"
            app:srcCompat="@drawable/fire_logo" />

        <TextView
            android:id="@+id/elementLabell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="Type d'élément"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/statLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="3"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="Caractéristiques"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/powerLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_row="4"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/stat_power" />

        <TextView
            android:id="@+id/powerLabell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="center_vertical"
            android:layout_row="4"
            android:text="POWER"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/lifeLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_row="5"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/stat_life" />

        <TextView
            android:id="@+id/lifeLabell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="center_vertical"
            android:layout_row="5"
            android:text="LIFE"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/speedLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_row="6"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/stat_speed" />

        <ImageView
            android:id="@+id/staminaLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_row="7"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/stat_stamina" />

        <ImageView
            android:id="@+id/carLogo"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="2"
            app:srcCompat="@drawable/fire_lion_evol1" />

        <ImageView
            android:id="@+id/eggLogo"
            android:layout_width="159dp"
            android:layout_height="170dp"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="8"
            app:srcCompat="@drawable/geni_egg" />

        <ImageView
            android:id="@+id/evol1Logo"
            android:layout_width="159dp"
            android:layout_height="170dp"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="8"
            app:srcCompat="@drawable/geni_evol1" />

        <ImageView
            android:id="@+id/evol2Logo"
            android:layout_width="159dp"
            android:layout_height="170dp"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="8"
            app:srcCompat="@drawable/geni_evol2" />

        <ImageView
            android:id="@+id/evol3Logo"
            android:layout_width="159dp"
            android:layout_height="170dp"
            android:layout_column="3"
            android:layout_gravity="center_horizontal"
            android:layout_row="8"
            app:srcCompat="@drawable/geni_evol3" />

        <TextView
            android:id="@+id/speedLabell"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_gravity="center_vertical"
            android:layout_row="6"
            android:text="SPEED"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/staminaLabell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_gravity="center_vertical"
            android:layout_row="7"
            android:text="STAMINA"
            android:textSize="18sp" />


    </GridLayout>




</android.support.constraint.ConstraintLayout>
